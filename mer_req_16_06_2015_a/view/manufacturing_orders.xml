<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <!-- 11/12/2015 (felix) Form view, menu: Manufacturing/Manufacturing/Manufacturing orders -->
        <record id="mrp_production_form_view_inherit_1" model="ir.ui.view">
            <field name="name">mrp.production.form.view.inherit.1</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="priority" eval="200"/>
            <field name="arch" type="xml">
            
                <!-- 11/12/2015 (felix) Add a domain filter in "user_id" field -->
                <xpath expr="//form/sheet/group[1]/group[2]/field[@name='user_id']" position="attributes">
                    <attribute name="domain">[('id', '=?', machine_id.workcenter_ids.employee_id)]</attribute>
                </xpath>
                                
            </field>
        </record>
                
    </data>
</openerp>
