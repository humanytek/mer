<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <!-- 08/10/2015 (felix) Tree view, menu: Manufacturing/Manufacturing/Manufacturing orders -->
        <record id="mrp_production_tree_inherit_1" model="ir.ui.view">
            <field name="name">mrp.production.tree.inherit.1</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="priority" eval="200"/>
            <field name="arch" type="xml">
            
                <!-- 08/10/2015 (felix) Add field "turn_id" -->
                <xpath expr="//field[@name='routing_id']" position="after">
                    <field name="turn_id" string="Turn"/>
                </xpath>
                
            </field>
        </record>
    
        <!-- 24/09/2015 (felix) Form view, menu: Manufacturing/Manufacturing/Manufacturing orders -->
        <record id="mrp_production_form_inherit_1" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit.1</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="priority" eval="200"/>
            <field name="arch" type="xml">
            
                <!-- 24/09/2015 (felix) Add field "machine_id" -->
                <xpath expr="//form/sheet/group/group[1]/field[@name='product_id']" position="before">
                    <!-- 19/10/2015 (felix) Add on_change option to check relation between turn and product -->
                    <field name="machine_id" string="Machine" required="1" on_change="on_change_machine(machine_id,product_id)"/>
                </xpath>
                
                <!-- 24/09/2015 (felix) Hide page "Work Orders" -->
                <xpath expr="//form/sheet/notebook/page[@string='Work Orders']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                
                <!-- 02/10/2015 (felix) Change permissions in field "move_lines" -->
                <xpath expr="//form/sheet/notebook/page[@string='Consumed Products']" position="replace">
                    <page string="Consumed Products">
				        <separator string="Products to Consume"/>
					    <field name="move_lines" nolabel="1" options="{'reload_on_button': true}" modifiers="{}"
					        attrs="{'readonly': [('state', 'not in', ['draft','confirmed','ready','in_production'])]}"/>
				        <separator string="Consumed Products"/>
				        <field name="move_lines2" nolabel="1" options="{'reload_on_button': true}" modifiers="{'readonly': true}"/>
			        </page>
                </xpath>
                
                <!-- 05/10/2015 (felix) Add field "turn_id" to put a specific turn -->
                <xpath expr="//form/sheet/group[1]/group[2]/field[@name='bom_id']" position="before">
                    <field name="turn_id" string="Turn" required="1"/>
                </xpath>
                
                <!-- 07/10/2015 (felix) Change field "bom_id" to be editable -->
                <xpath expr="//form/sheet/group[1]/group[2]/field[@name='bom_id']" position="replace">
                    <field name="bom_id" domain="['|', ('product_id','=',product_id), '&amp;', ('product_tmpl_id.product_variant_ids','=',product_id), ('product_id','=',False)]" context="{'default_product_id': product_id}" on_change="bom_id_change(bom_id)" required="1" attrs="{'readonly': [('state', 'not in', ['draft','confirmed','ready','in_production'])], 'required': 1}"/>
                </xpath>
                
            </field>
        </record>
        
        <!-- 24/09/2015 (felix) Search view, menu: Manufacturing/Manufacturing/Manufacturing orders -->
        <record id="view_mrp_production_filter_inherit_1" model="ir.ui.view">
            <field name="name">view.mrp.production.filter.inherit.1</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="priority" eval="200"/>
            <field name="arch" type="xml">
            
                <!-- 24/09/2015 (felix) Add filter group by "Machine" -->
                <xpath expr="//search/group/filter[@string='Scheduled Month']" position="after">
                    <filter string="Machines" icon="terp-go-month" domain="[]" context="{'group_by':'machine_id'}"/>
                </xpath>
            
                <!-- 24/09/2015 (felix) Add filter "Machine" -->
                <xpath expr="//search/field[@name='name']" position="after">
                    <field name="machine_id" string="In Machine" filter_domain="[('name','ilike',self)]"/>
                </xpath>
                
                <!-- 05/10/2015 (felix) Add filter group by "Turn" -->
                <xpath expr="//search/group/filter[@string='Machines']" position="after">
                    <filter string="Turn" icon="terp-go-month" domain="[]" context="{'group_by':'turn_id'}"/>
                </xpath>
                
            </field>
        </record>
        
                
    </data>
</openerp>
